<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Drive</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            accent: '#6c5ce7'
          },
          fontFamily: {
            sans: ['Inter', 'ui-sans-serif', 'system-ui']
          }
        }
      }
    }
  </script>
</head>
<body class="min-h-screen bg-gradient-to-b from-gray-50 to-blue-50 font-sans">
  <!-- Navigation -->
  <nav class="bg-gradient-to-r from-accent to-blue-500 text-white shadow-lg">
    <div class="max-w-6xl mx-auto px-6 py-4 flex justify-between items-center">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-lg bg-white/20 flex items-center justify-center font-bold text-lg">DR</div>
        <h1 class="text-2xl font-semibold">My Drive</h1>
      </div>
      <div class="flex items-center gap-4">
        <span class="text-sm font-medium">Welcome, <strong><%= user.name %></strong></span>
        <a href="/user/logout" class="px-4 py-2 rounded-lg bg-white/20 hover:bg-white/30 transition font-medium">Logout</a>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="max-w-6xl mx-auto px-6 py-8">
    <!-- Upload Section -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
      <div class="lg:col-span-2 bg-white rounded-2xl shadow-md border border-gray-200 p-8">
        <div class="mb-6">
          <h2 class="text-2xl font-semibold text-gray-900 mb-2">Upload Files</h2>
          <p class="text-sm text-gray-500">Drag & drop or click to select files to upload</p>
        </div>

        <form id="upload-form" action="/files/upload" method="POST" enctype="multipart/form-data" class="space-y-4">
          <div class="relative">
            <input 
              type="file" 
              name="file" 
              id="file-input"
              required 
              class="block w-full text-sm text-gray-600 file:mr-4 file:py-3 file:px-6 file:rounded-lg file:border-0 file:bg-gradient-to-r file:from-accent file:to-blue-500 file:text-white file:font-semibold file:cursor-pointer hover:file:opacity-90 transition"
            >
          </div>
          <button 
            type="submit" 
            class="w-full bg-gradient-to-r from-accent to-blue-500 text-white py-3 rounded-lg font-semibold shadow-md hover:opacity-95 transition"
          >
            Upload File
          </button>
        </form>

        <div id="upload-message" class="mt-4 p-4 rounded-lg text-sm font-medium hidden"></div>
      </div>

      <!-- Stats Section -->
      <% 
        const totalBytes = files ? files.reduce((sum, f) => sum + f.size, 0) : 0;
        const initialMB = (totalBytes / (1024 * 1024)).toFixed(2);
        const initialCount = files ? files.length : 0;
      %>
      <div class="space-y-6">
        <div class="bg-white rounded-2xl shadow-md border border-gray-200 p-6">
          <p class="text-sm text-gray-600 mb-2">Total Files</p>
          <p id="total-files" class="text-3xl font-bold text-accent"><%= initialCount %></p>
        </div>
        <div class="bg-white rounded-2xl shadow-md border border-gray-200 p-6">
          <p class="text-sm text-gray-600 mb-2">Storage Used</p>
          <p id="storage-used" class="text-3xl font-bold text-blue-500"><%= initialMB %> MB</p>
        </div>
      </div>
    </div>

    <!-- Files Section -->
    <div id="files-section" class="bg-white rounded-2xl shadow-md border border-gray-200 p-8">
      <h3 class="text-xl font-semibold text-gray-900 mb-6">Your Files</h3>
      
      <% if (!files || files.length === 0) { %>
        <div class="text-center py-12">
          <svg class="w-12 h-12 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <p class="text-gray-500">No files uploaded yet. Start by uploading your first file!</p>
        </div>
      <% } else { %>
        <!-- Desktop table (hidden on small screens) -->
        <div class="hidden md:block overflow-x-auto">
          <table class="w-full text-sm">
            <thead>
              <tr class="border-b border-gray-200">
                <th class="text-left py-3 px-4 font-semibold text-gray-700">Filename</th>
                <th class="text-left py-3 px-4 font-semibold text-gray-700">Size</th>
                <th class="text-right pt-4 pb-3 px-4 font-semibold text-gray-700 align-top">Action</th>
              </tr>
            </thead>
            <tbody>
              <% files.forEach(f => { %>
                <tr class="border-b border-gray-100 hover:bg-gray-50 transition">
                  <td class="py-4 px-4">
                    <div class="relative group">
                      <p class="text-gray-900 font-medium truncate file-name" title="<%= f.originalName %>" tabindex="0" data-full="<%= f.originalName %>"><%= f.originalName %></p>
                      <div class="hidden group-hover:block absolute left-0 mt-2 bg-black text-white text-xs rounded px-2 py-1 max-w-xs break-words z-10"> <%= f.originalName %> </div>
                    </div>
                  </td>
                  <td class="py-4 px-4 text-gray-600"><%= (f.size / 1024).toFixed(2) %> KB</td>
                  <td class="py-4 px-4 text-right">
                    <div class="inline-flex items-center justify-end gap-3">
                      <a
                        href="/files/download/<%= f._id %>"
                        class="inline-flex items-center gap-2 text-accent hover:text-blue-500 font-medium transition"
                      >
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                        </svg>
                        Download
                      </a>

                      <!-- Delete button wrapped in POST form -->
                      <form action="/files/delete/<%= f._id %>" method="POST" class="inline">
                        <button type="button" data-id="<%= f._id %>" data-size="<%= f.size %>" class="delete-btn inline-flex items-center gap-2 bg-white border border-red-100 text-red-600 hover:bg-red-50 px-3 py-2 rounded-lg text-sm font-medium transition">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6M9 7V4a1 1 0 011-1h4a1 1 0 011 1v3"/>
                          </svg>
                          Delete
                        </button>
                      </form>
                    </div>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>

        <!-- Mobile stacked list -->
        <div class="md:hidden space-y-3">
          <% files.forEach(f => { %>
                <div class="bg-gray-50 rounded-lg p-4 border border-gray-100 shadow-sm">
              <div class="flex justify-between items-start">
                <div class="min-w-0 pr-4">
                  <p class="text-xs text-gray-500">Filename</p>
                  <p class="text-sm font-medium text-gray-900 truncate file-name" title="<%= f.originalName %>" tabindex="0" data-full="<%= f.originalName %>"><%= f.originalName %></p>
                </div>
                <div class="text-right">
                  <p class="text-xs text-gray-500">Size</p>
                  <p class="text-sm text-gray-600"><%= (f.size / 1024).toFixed(2) %> KB</p>
                </div>
              </div>

              <div class="mt-3 flex items-center justify-end gap-3">
                <a href="/files/download/<%= f._id %>" class="inline-flex items-center gap-2 text-accent hover:text-blue-500 font-medium">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                  </svg>
                </a>
                <form action="/files/delete/<%= f._id %>" method="POST" class="inline">
                  <button type="button" data-id="<%= f._id %>" data-size="<%= f.size %>" class="delete-btn inline-flex items-center gap-2 bg-white border border-red-100 text-red-600 hover:bg-red-50 px-3 py-2 rounded-lg text-sm font-medium transition">Delete</button>
                </form>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>
  </div>

  <script>
    const form = document.getElementById('upload-form');
    const msg = document.getElementById('upload-message');
    const fileInput = document.getElementById('file-input');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      msg.classList.add('hidden');
      const submitBtn = form.querySelector('button[type="submit"]');
      submitBtn.disabled = true;
      submitBtn.classList.add('opacity-70', 'cursor-not-allowed');

      const fd = new FormData(form);

      try {
        const res = await fetch(form.action, {
          method: 'POST',
          body: fd,
          credentials: 'same-origin'
        });

        if (res.ok) {
          msg.textContent = 'âœ“ File uploaded successfully!';
          msg.className = 'p-4 rounded-lg text-sm font-medium bg-green-50 text-green-700 border border-green-200';
          msg.classList.remove('hidden');
          form.reset();
          setTimeout(() => location.reload(), 800);
        } else {
          const text = await res.text();
          msg.textContent = 'Upload failed: ' + text;
          msg.className = 'p-4 rounded-lg text-sm font-medium bg-red-50 text-red-700 border border-red-200';
          msg.classList.remove('hidden');
        }
      } catch (err) {
        msg.textContent = 'Network error. Try again.';
        msg.className = 'p-4 rounded-lg text-sm font-medium bg-red-50 text-red-700 border border-red-200';
        msg.classList.remove('hidden');
        console.error(err);
      } finally {
        submitBtn.disabled = false;
        submitBtn.classList.remove('opacity-70', 'cursor-not-allowed');
      }
    });

    // Client-side UI delete with themed confirmation dialog
    (function(){
      const totalEl = document.getElementById('total-files');
      const storageEl = document.getElementById('storage-used');
      const filesSection = document.getElementById('files-section');

      function formatMB(n){
        return n.toFixed(2) + ' MB';
      }

      // create modal markup
      const modal = document.createElement('div');
      modal.id = 'delete-modal';
      modal.className = 'fixed inset-0 z-50 hidden items-center justify-center p-4';
      modal.innerHTML = `
        <div class="absolute inset-0 bg-black/40 backdrop-blur-sm"></div>
        <div class="relative max-w-md w-full bg-white rounded-xl shadow-xl border border-gray-100 p-6 z-10">
          <h4 class="text-lg font-semibold text-gray-900 mb-2">Delete file</h4>
          <p id="delete-modal-text" class="text-sm text-gray-600 mb-4">Are you sure you want to delete this file? This action cannot be undone.</p>
          <div class="flex justify-end gap-3">
            <button id="delete-cancel" type="button" class="px-4 py-2 rounded-md bg-white border border-gray-200 text-sm">Cancel</button>
            <form id="delete-form" method="POST" action="" class="inline">
              <button id="delete-confirm" type="submit" class="px-4 py-2 rounded-md bg-gradient-to-r from-red-500 to-red-600 text-white text-sm font-semibold">Delete</button>
            </form>
          </div>
        </div>
      `;
      document.body.appendChild(modal);

      let pendingBtn = null;
      let pendingForm = null;

      const deleteForm = modal.querySelector('#delete-form');

      function openModal(btn){
        pendingBtn = btn;
        pendingForm = btn.closest('form');
        // set modal form action to the row form action (if available)
        if (deleteForm && pendingForm) deleteForm.action = pendingForm.action;

        const name = btn.closest('tr')?.querySelector('td')?.textContent?.trim() || 'this file';
        const text = document.getElementById('delete-modal-text');
        if (text) text.textContent = `Are you sure you want to delete "${name}"? This action cannot be undone.`;
        modal.classList.remove('hidden');
        modal.classList.add('flex');
      }

      function closeModal(){
        pendingBtn = null;
        modal.classList.add('hidden');
        modal.classList.remove('flex');
      }

      function performRemoval(btn){
        const row = btn.closest('tr');
        if (!row) return;
        const size = Number(btn.dataset.size) || 0;
        const sizeMB = size / (1024 * 1024);

        const currentCount = parseInt((totalEl && totalEl.textContent) || '0', 10);
        const newCount = Math.max(0, currentCount - 1);
        if (totalEl) totalEl.textContent = String(newCount);

        const currentStorageText = (storageEl && storageEl.textContent) || '0';
        const currentStorage = parseFloat(currentStorageText) || 0;
        const newStorage = Math.max(0, currentStorage - sizeMB);
        if (storageEl) storageEl.textContent = formatMB(newStorage);

        row.style.transition = 'opacity 220ms, transform 220ms';
        row.style.opacity = '0';
        row.style.transform = 'translateY(-6px)';
        setTimeout(()=>{
          row.remove();
          const tbody = filesSection.querySelector('tbody');
          const hasRows = tbody && tbody.querySelectorAll('tr').length > 0;
          if (!hasRows) {
            filesSection.innerHTML = `
              <h3 class="text-xl font-semibold text-gray-900 mb-6">Your Files</h3>
              <div class="text-center py-12">
                <svg class="w-12 h-12 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <p class="text-gray-500">No files uploaded yet. Start by uploading your first file!</p>
              </div>
            `;
          }
        }, 240);
      }

      document.querySelectorAll('.delete-btn').forEach(btn => {
        btn.addEventListener('click', (e) => {
          openModal(btn);
        });
      });

      document.getElementById('delete-cancel').addEventListener('click', closeModal);

      // handle modal form submit: POST then update UI
      if (deleteForm) {
        deleteForm.addEventListener('submit', async (ev) => {
          ev.preventDefault();
          if (!pendingBtn) return closeModal();
          const action = deleteForm.action || (pendingForm && pendingForm.action) || '';
          try {
            if (action) {
              // send POST to server, but don't rely on response to update UI
              await fetch(action, { method: 'POST', credentials: 'same-origin' });
            }
          } catch (err) {
            console.warn('Delete request failed:', err);
          }
          performRemoval(pendingBtn);
          closeModal();
        });
      }

      // close modal on backdrop click
      modal.addEventListener('click', (e) => {
        if (e.target === modal) closeModal();
      });
    })();

    // mobile/keyboard tooltip: show full filename briefly when tapped or focused
    (function(){
      let activeTip = null;
      function showTip(text, rect){
        if (activeTip) activeTip.remove();
        const tip = document.createElement('div');
        tip.className = 'fixed z-50 bg-black text-white text-xs rounded px-3 py-2 max-w-xs break-words shadow-lg animate-fadeIn';
        tip.style.left = Math.min(window.innerWidth - 16 - 8, Math.max(8, rect.left + (rect.width/2) - 120)) + 'px';
        tip.style.top = Math.max(12, rect.bottom + 8) + 'px';
        tip.textContent = text;
        document.body.appendChild(tip);
        activeTip = tip;
        setTimeout(()=>{ if (tip) tip.remove(); if (activeTip===tip) activeTip=null; }, 3500);
      }

      // attach to elements with class 'file-name'
      document.querySelectorAll('.file-name').forEach(el => {
        el.addEventListener('click', (e) => {
          const txt = el.dataset.full || el.textContent || '';
          showTip(txt, el.getBoundingClientRect());
        });
        el.addEventListener('focus', (e) => {
          const txt = el.dataset.full || el.textContent || '';
          showTip(txt, el.getBoundingClientRect());
        });
      });
    })();
  </script>
</body>
</html>
