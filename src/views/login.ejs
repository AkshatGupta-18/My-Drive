<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">

  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: { accent: '#6c5ce7' },
          fontFamily: { sans: ['Inter', 'ui-sans-serif', 'system-ui'] }
        }
      }
    }
  </script>
</head>

<body class="min-h-screen bg-gradient-to-b from-gray-100 to-blue-50 flex items-center justify-center p-6 font-sans">
  <div class="w-full max-w-md">
    <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-200">

      <!-- Header -->
      <div class="flex items-center mb-6">
        <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-accent to-blue-500 flex items-center justify-center text-white font-bold text-lg">
          DR
        </div>
        <div class="ml-4">
          <h1 class="text-2xl font-semibold text-gray-900">Welcome Back</h1>
          <p class="text-sm text-gray-500 mt-1">Sign in to access your files.</p>
        </div>
      </div>

      <!-- Form -->
      <form action="/user/login" method="POST" class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
          <input type="email" name="email" placeholder="you@example.com" required
            class="w-full rounded-lg border border-gray-300 px-4 py-3 text-sm focus:outline-none focus:ring-2 focus:ring-accent bg-white" />
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
          <div class="relative flex items-center">
            <input id="password" type="password" name="password" placeholder="Enter your password" required
              class="w-full rounded-lg border border-gray-300 px-4 py-3 pr-16 text-sm focus:outline-none focus:ring-2 focus:ring-accent bg-white" />
            <button type="button" id="togglePassword"
              class="absolute right-3 text-sm text-gray-600 hover:text-gray-800 px-2 py-1 bg-gray-100 rounded">
              Show
            </button>
          </div>
        </div>

        <button type="submit"
          class="w-full bg-gradient-to-r from-accent to-blue-500 text-white py-3 rounded-lg text-sm font-semibold shadow hover:opacity-95 transition">
          Sign In
        </button>
      </form>

      <p class="mt-4 text-center text-sm text-gray-500">
        Don't have an account?
        <a href="/user/register" class="text-accent font-medium hover:underline">Register</a>
      </p>

    </div>
  </div>

  <script>
    // Show/hide password toggle
    const passwordInput = document.getElementById('password');
    const toggleBtn = document.getElementById('togglePassword');

    toggleBtn.addEventListener('click', () => {
      if (passwordInput.type === 'password') {
        passwordInput.type = 'text';
        toggleBtn.textContent = 'Hide';
      } else {
        passwordInput.type = 'password';
        toggleBtn.textContent = 'Show';
      }
    });
  </script>

</body>
</html>
